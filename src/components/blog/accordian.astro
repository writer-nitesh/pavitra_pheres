---
interface Props {
    faqs: Array<{ q: string; a: string }>;
}

const { faqs } = Astro.props;
---

<div class="flex flex-col gap-4">
    {
        faqs.map(({ q, a }) => (
            <details open>
                <summary class="font-bold cursor-pointer">
                    <h3 class="inline text-lg">{q}</h3>
                </summary>
                <p>{a}</p>
            </details>
        ))
    }
</div>
